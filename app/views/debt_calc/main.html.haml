.row
  .col-md-6
    .jumbotron.calc
      #calculator
    / .jumbotron.calc
    /   %h2.text-center 
    /     Expected Income
    /   .form-group
    /     %h3 
    /       Income: 
    /       %small#calc-output
    /   .form-group
    /     %label 
    /       Amount
    /     %input.form-control#calc-input-amount{ placeholder: 'Amount' }
    /   .form-group
    /     %label 
    /       Period (months)
    /     %input.form-control#calc-input-period
    /   %button.btn.btn-primary#calc-calculate
    /     Calculate
  
  .col-md-6
    .jumbotron.calc
      %h2.text-center
        Actual Income
      .list-group
        - @credits.each do |credit| 
          = link_to credit.to_s, root_path(credit_id: credit.id), class: 'list-group-item'
      - if @income_view

        %h3
          Credit:
          %small
            = @income_view.credit

        %h3
          Paid Out Main Debt:
          %small
            = @income_view.main_debt_payments
            
        %h3
          Paid Out Percents:
          %small
            = @income_view.payments_of_interest

        %h3
          Actual Income %:
          %small
            = @income_view.real_income
        


