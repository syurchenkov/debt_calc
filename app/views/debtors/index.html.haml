%h1 Listing debtors

%table
  %thead
    %tr
      %th Name
      %th
      %th
      %th

  %tbody
    - @debtors.each do |debtor|
      %tr
        %td= debtor.name
        %td= link_to 'Show', debtor
        %td= link_to 'Edit', edit_debtor_path(debtor)
        %td= link_to 'Destroy', debtor, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Debtor', new_debtor_path
